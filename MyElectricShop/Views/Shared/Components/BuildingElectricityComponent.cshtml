@model IEnumerable<DataAccessLayer.Models.Product>

@foreach (var item in Model)
{
    <div class="col-lg-3 col-sm-6">
        <div class="single-bestsellers-products">
            <div class="bestsellers-products-image">
                <a href="/product/productsinglepage/@item.ProductId"><img src="/images/@(item.ProductId).jpg" alt="image"></a>
                <div class="tag">جدید</div>
                <ul class="bestsellers-action">
                    <li>
                        <a href="/product/productsinglepage/@item.ProductId">
                            <i class="flaticon-shopping-cart"></i>
                        </a>
                    </li>
                    @*<li>
                        <a href="/product/Favorite/@item.ProductId"><i class="flaticon-heart"></i></a>
                    </li>*@
                    @*<li>
                        <a href="/product/showmodal/@item.ProductId" data-bs-toggle="modal" data-bs-target="#productsQuickView"><i class="flaticon-view"></i></a>
                    </li>*@
                </ul>
            </div>

            <div class="bestsellers-products-content">
                <h3>
                    <a href="/product/productsinglepage/@item.ProductId">@item.Name</a>
                </h3>
                <ul class="rating">
                    <li><i class='bx bxs-star'></i></li>
                    <li><i class='bx bxs-star'></i></li>
                    <li><i class='bx bxs-star'></i></li>
                    <li><i class='bx bxs-star'></i></li>
                    <li><i class='bx bxs-star'></i></li>
                </ul>
                <span>@item.Price تومان</span>
            </div>
        </div>
    </div>

}