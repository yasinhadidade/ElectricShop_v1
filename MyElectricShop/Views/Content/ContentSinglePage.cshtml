                    </div>
                    <!--comment section finished-->

                </div>
            </div>

            <div class="col-lg-4 col-md-12">
                <aside class="widget-area">
                    <div class="widget widget_search">
                        <form class="search-form" method="post" asp-controller="content" asp-action="SearchedContent">
                            <label>
                                <span class="screen-reader-text">جستجو:</span>
                                <input type="search" name="search" class="search-field" placeholder="جستجو ...">
                            </label>
                            <button type="submit">
                                <i class='bx bx-search-alt'></i>
                            </button>
                        </form>
                    </div>

                    <div class="widget widget_categories">
                        <h3 class="widget-title">دسته بندی ها</h3>

                        <ul class="categories">
                            @await Component.InvokeAsync("CategoriesComponent")

                        </ul>
                    </div>

                    <div class="widget widget_ejon_posts_thumb">
                        <h3 class="widget-title">پست های با بیشترین بازدید</h3>

                        @await Component.InvokeAsync("MostVisitedContentComponent")

                    </div>

                    <div class="widget widget_tag_cloud">
                        <h3 class="widget-title">برچسب های محبوب</h3>

                        <div class="tagcloud">
                            @if (Model.Tags != null)
                            {

                                @foreach (var item in Model.Tags.Split('،'))
                                {
                                    <a href="/Content/searchedcontenttags/@item">@item</a>
                                }
                            }

                        </div>
                    </div>
                </aside>
            </div>
        </div>
    </div>
</section>
<!-- End Blog Details Area -->
