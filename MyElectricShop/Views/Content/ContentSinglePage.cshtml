@model DataAccessLayer.Models.Content
@{
    ViewData["Title"] = "ContentSinglePage";
}

<!-- Start Page Banner -->
<div class="page-title-area">
    <div class="container">
        <div class="page-title-content">
            <h2>جزئیات وبلاگ</h2>

            <ul>
                <li><a href="index.html">صفحه اصلی</a></li>
                <li>جزئیات وبلاگ</li>
            </ul>
        </div>
    </div>
</div>
<!-- End Page Banner -->
<!-- Start Blog Details Area -->
<section class="blog-details-area ptb-50">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-12">
                <div class="blog-details-desc">
                    <div class="article-image">
                        <img src="/ContentImage/@(Model.Contentid).jpg" alt="image">
                    </div>

                    <div class="article-content">
                        <div class="details-content">
                            <span>فروشگاهی</span>
                            <h3>
                                <a href="blog-details.html">@Model.Title</a>
                            </h3>
                            <div class="post-meta">
                                <a href="#">مدیر</a> / @Model.CreateDate
                            </div>
                            <p>@Model.ShortDescription</p>

                        </div>

                        <!--ad section-->
                        @*<blockquote class="wp-block-quote">
                                <div class="icon">
                                    <i class="flaticon-quote"></i>
                                </div>

                                <p>*********تبلیغات********</p>
                            </blockquote>*@
                        <!--ad section finish-->


                        <p>@Model.Text</p>
                    </div>

                    <div class="article-footer">
                        <div class="article-tags">
                            <span>
                                <i class='bx bxs-bookmark'></i>
                            </span>
                            @if (Model.Tags!=null)
                            {
                                @foreach (var item in Model.Tags.Split('،').Take(3))
                                {
                                    <a href="/content/searchedcontent/@item">@item</a>

                                }
                            }


                        </div>

                        <div class="article-share">
                            <ul class="social">
                                <li><span>اشتراک گذاری:</span></li>
                                <li>
                                    <a href="#" target="_blank">
                                        <i class='bx bxl-facebook'></i>
                                    </a>
                                </li>
                                <li>
                                    <a href="#" target="_blank">
                                        <i class='bx bxl-twitter'></i>
                                    </a>
                                </li>
                                <li>
                                    <a href="#" target="_blank">
                                        <i class='bx bxl-instagram'></i>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <!--comment section-->
                    <div class="comments-area">
