@model IEnumerable<DataAccessLayer.Models.Content>
@{
    ViewData["Title"] = "ShowAllContents";
}

<!-- Start Page Banner -->
<div class="page-title-area">
    <div class="container">
        <div class="page-title-content">
            <h2>وبلاگ تمام عرض</h2>

            <ul>
                <li><a href="index.html">صفحه اصلی</a></li>
                <li>وبلاگ تمام عرض</li>
            </ul>
        </div>
    </div>
</div>
<!-- End Page Banner -->

<!-- Start Blog Area -->
<section class="blog-area bg-color bg-ffffff pt-50 pb-50">
    <div class="container-fluid">
        <div class="row">

            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="single-blog">
                        <div class="blog-image">
                            <a href="/content/contentsinglepage/@item.Contentid"><img src="/ContentImage/@(item.Contentid).jpg" alt="image"></a>
                        </div>

                        <div class="blog-content">
                            <span>@item.Title</span>
                            <h3>
                                <a href="/content/contentsinglepage/@item.Contentid">@item.ShortDescription</a>
                            </h3>
                            <div class="post-meta">
                                <a href="#">نویسنده :@item.Author</a> / @item.CreateDate
                            </div>
                        </div>
                    </div>
                </div>

            }


            <div class="col-lg-12 col-md-12">
                <div class="pagination-area">
                    <a href="#" class="prev page-numbers">
                        <i class='flaticon-right-arrow'></i>
                    </a>
                    <a href="#" class="page-numbers">1</a>
                    <span class="page-numbers current" aria-current="page">2</span>
                    <a href="#" class="page-numbers">3</a>
                    <a href="#" class="page-numbers">4</a>
                    <a href="#" class="next page-numbers">
                        <i class='flaticon-left-arrow'></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End Blog Area -->
