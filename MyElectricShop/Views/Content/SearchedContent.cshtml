@model IEnumerable<DataAccessLayer.Models.Content>
@{
    ViewData["Title"] = "SearchContent";
}
<!-- Start Page Banner -->
<div class="page-title-area">
    <div class="container">
        <div class="page-title-content">
            <h2>نتایج جستجو بر اساس @ViewBag.searchtitle</h2>

          
        </div>
    </div>
</div>
<!-- End Page Banner -->
@if (Model.Count() == 0)
{
    <div class="alert alert-info">کاربر گرامی، نتیجه ای یافت نشد</div>
}

else if (Model.Count() > 0)
{
    <!-- Start Shop Area -->
    <section class="shop-area bg-ffffff pt-50 pb-50">
        <div class="container-fluid">
            <div class="products-filter-options">
                <div class="row align-items-center">
                    <div class="col-lg-9 col-md-9">
                    </div>


                </div>
            </div>

            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-lg-4 col-md-6">
                        <div class="single-blog">
                            <div class="blog-image">
                                <a href="/Content/contentsinglepage/@item.Contentid"><img src="/ContentImage/@(item.Contentid).jpg" alt="image"></a>
                            </div>

                            <div class="blog-content">
                                <span>@item.Title</span>
                                <h3>
                                    <a href="/Content/contentsinglepage/@item.Contentid">@item.ShortDescription</a>
                                </h3>
                                <div class="post-meta">
                                    <a href="#">نویسنده :@item.Author</a> / @item.CreateDate
                                </div>
                            </div>
                        </div>
                    </div>
                }



                @*<div class="col-lg-12 col-md-12">
            <div class="pagination-area">
                <a href="#" class="prev page-numbers">
