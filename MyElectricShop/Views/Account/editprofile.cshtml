@model DataAccessLayer.Models.User

@{
    ViewData["Title"] = "editprofile";
}



<section class="register-area ptb-50">
    <div class="container">
        <div class="register-form">
            <h2>ویرایش اطلاعات شخصی</h2>

            <form asp-action="editprofile" method="post" >
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="UserId" />
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <input type="hidden" asp-for="Password"/>
                <div class="form-group">
                    <label asp-for="Fulllname" class="control-label"></label>
                    <input asp-for="Fulllname" class="form-control" />
                    <span asp-validation-for="Fulllname" class="text-danger"></span>
                </div>
              
              
                <div class="form-group">
                    <label asp-for="Address" class="control-label"></label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PhoneNumber" class="control-label"></label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
               
                <div class="form-group">
                    <input type="submit" value="ثبت تغیرات" class="btn btn-primary" />
                </div>
            </form>


           
        </div>
    </div>
</section>







@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
